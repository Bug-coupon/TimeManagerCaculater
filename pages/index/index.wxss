.container {
  height: 100rpx;
  padding: 40rpx;
  text-align: center;
  /* background-color: moccasin; */
  position: relative;
}

.title {
  font-weight: 700;
  font-size: 60rpx;
  line-height: 112rpx;
  text-align: center;
  color:white;
}

.time-background {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  height: 100%;
}

.scroll {
  height: 800rpx;
}

.items-wrapper {
  margin-top: 50rpx;
  border-top: 500rpx;
  font-size: 30rpx;
  text-align: center;
}

.add_item {
  text-align: right;
}

.add_item_text {
  text-align: center;
  font-size: 35rpx;
  color: rgb(87, 63, 117);
}

.submitButton {
  margin-left: 315rpx;
}

.add_wrapper{
  /* display: flex; */
  margin-left: 317rpx;
  width: 100rpx;
  height: 0rpx;
  display: flex;
  flex-direction: row;
}

.inrow-buttons{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 0rpx;
}

.left {
  justify-content: flex-end;
}

center{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button-wrapper {
  background-color: moccasin;
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: -1;
}

.add-button {
  display: inline;
}

.delete-button {
  display: inline;
}

.line {
  display: block;
  height: 38rpx;
}

.func-button{
  border-color: white;
  border-width: 1rpx;
}

.chart-button {
  background-color: orange;
  border-radius:20rpx;
  width:48%;
  height:55rpx;
  line-height:55rpx;
  font-size:26rpx;
  color:#fff;
  border:none;
}
